<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <h2 class="subheading"><%= post.detail %></h2>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              <%= post.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%=post.title%></p>

          <p><%=post.detail%> </p>

          <h2 class="section-heading"><%=post.title%></h2>

          <blockquote class="blockquote"> </blockquote>

          <a href="#">
            <img class="img-fluid" src="img/post-sample-image.jpg" alt="">
          </a>
          <div class="col-xl-10 col-lg-20">
            <!-- Share box -->
            <div class="tm-bg-gray tm-share-box">
              <div class="text-center">
                <a href="/posts/edit/<%=post._id%>" class="btn btn-primary btn-lg p-0 mb-4 tm-btn-animate tm-btn-download tm-icon-download" ><span>Update Details</span></a>	
              </div>	
              <div class="text-center">
                <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger btn-lg p-0 tm-btn-animate tm-btn-download tm-icon-download"
                  onclick="return confirm('Silme iÅŸlemine devam etmek ister misiniz?')" ><span>Delete Photo</span></a>	
              </div>								
            </div>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
